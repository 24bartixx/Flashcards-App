<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MainScreenFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/study_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:importantForAccessibility="no"
            app:srcCompat="@drawable/ic_study"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/study_button"
            app:layout_constraintBottom_toBottomOf="@id/study_button" />

        <Button
            android:id="@+id/study_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:paddingVertical="10dp"
            android:textSize="30sp"
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:background="@drawable/button_roundstyle"
            android:text="@string/study_button_text"
            app:layout_constraintStart_toEndOf="@id/study_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/devider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="16dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/study_button" />

        <ImageView
            android:id="@+id/create_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:importantForAccessibility="no"
            app:srcCompat="@drawable/ic_create"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/create_button"
            app:layout_constraintBottom_toBottomOf="@id/create_button" />

        <Button
            android:id="@+id/create_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:paddingVertical="10dp"
            android:textSize="30sp"
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:background="@drawable/button_roundstyle"
            android:text="@string/create_button_text"
            app:layout_constraintStart_toEndOf="@id/create_icon"
            app:layout_constraintTop_toBottomOf="@id/devider1"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/devider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="16dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/create_button" />

        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:importantForAccessibility="no"
            app:srcCompat="@drawable/ic_search"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/search_button"
            app:layout_constraintBottom_toBottomOf="@id/search_button" />

        <Button
            android:id="@+id/search_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:paddingVertical="10dp"
            android:textSize="30sp"
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:background="@drawable/button_roundstyle"
            android:text="@string/search_button_text"
            app:layout_constraintStart_toEndOf="@id/search_icon"
            app:layout_constraintTop_toBottomOf="@id/devider2"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>